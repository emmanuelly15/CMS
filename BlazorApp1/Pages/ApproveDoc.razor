@page "/ApproveDoc/{Id}"
@using CommonModels.Model
@using BlazorApp1.DbServices
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject DocumentService DocumentService
<h2>Approve Document</h2>
@if(imageuploads != null)
{
<p>Are you sure you want to delete this Group: <b>@imageuploads.Title</b></p>
<div class="row">
       <table class="table">
                <tr>
                       <td>Email</td>
                       <td>@imageuploads.Email </td>
               </tr>
               <tr>
                       <td>Title</td>
                       <td>@imageuploads.Title </td>
               </tr>
              <tr>
                       <td>InsertedOn</td>
                       <td>@imageuploads.InsertedOn </td>
               </tr>
               <tr>
                       <td>ImagePath</td>
                       <td><a href="@imageuploads.ImagePath"> @imageuploads.ImagePath</a></td> 
               </tr> 
               <tr>
                       <td>FileFormat</td>
                       <td>@imageuploads.FileFormat </td>
               </tr>
               <tr>
                       <td>Comment</td>
                       <td>@imageuploads.Comment </td>

               </tr>
               <tr>
                       <td>Location</td>
                       <td>@imageuploads.Location </td>
               </tr>
               <tr>
                       <td>Status</td>
                       <td>@imageuploads.Status </td>
               </tr>
               <tr>
                       <td>Amount</td>
                       <td>@imageuploads.Amount </td>
               </tr>
           </table>
</div>
}
@code {
    [Parameter]
    public string Id{ get; set; }
    Imageupload imageupload = new Imageupload();
    protected override async Task OnInitializedAsync()
    {
        imageuploads = await DocumentService.GetDocumentById(int.Parse(Id));
    }
        
   
