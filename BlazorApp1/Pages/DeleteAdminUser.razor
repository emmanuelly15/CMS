@page "/DeleteAdminUser/{Id}"
@using CommonModels.Model
@using BlazorApp1.Data
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject AdminUserService AdminUserService

<style>
    body {
        background-color: #F9F6EE;
    }
</style>

<h2>Delete Admin User</h2>
@if(adminuser != null)
{
<p>Are you sure you want to delete this user with Name: <b>@adminuser.Name</b></p>
<div class="row">
       <table class="table">
               <tr>
                       <td>Name</td>
                       <td>@adminuser.Name </td>
                   </tr>
               <tr>
                       <td>Email</td>
                       <td>@adminuser.Email</td>
                   </tr>
                     
           </table>
</div>
}

<button type="button" class="btn btn-danger" @onclick="@Delete" value="Delete">
                                <span class="oi oi-trash"></span>
                                <a style="color: #FFFFFF" >Delete</a>
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel">
                                <span class="oi oi-circle-x"></span>
                                <a style="color: #FFFFFF" >Cancel</a>
                        </button>
@code {
    [Parameter]
    public string Id{ get; set; }
    AdminUser adminuser = new AdminUser();
    protected override async Task OnInitializedAsync()
    {
        adminuser = await AdminUserService.GetAdminUserById(int.Parse(Id));
    }
        
   protected async Task Delete()
    {
        
        await AdminUserService.DeleteAsync(int.Parse(Id));
        NavigationManager.NavigateTo("AdminUserList");
    }
    void Cancel()
            {
                NavigationManager.NavigateTo("AdminUserList");
            }
        }
