@page "/DeleteDevice/{Id}"
@using CommonModels.Model
@using BlazorApp1.Data
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject DeviceService DeviceService

<style>
    body {
        background-color: #F9F6EE;
    }
</style>

<h2>Delete Device</h2>
@if(device != null)
{
<p>Are you sure you want to delete this Device: <b>@device.IMEI</b></p>
<div class="row">
       <table class="table">
               <tr>
                       <td>IMEI</td>
                       <td>@device.IMEI </td>
               </tr>
              <tr>
                       <td>User</td>
                       <td>@device.User</td>
                   </tr>
               <tr>
                       <td>Groups</td>
                       <td>@device.Groups</td>
                   </tr>
                   <tr>
                       <td>Authorisation</td>
                       <td>@device.Authorisation</td>
                   </tr>
                   
                      
           </table>
</div>
}
<button type="button" class="btn btn-danger" @onclick="@Delete" value="Delete">
                                <span class="oi oi-trash"></span>
                                <a style="color: #FFFFFF" >Delete</a>
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel">
                                <span class="oi oi-circle-x"></span>
                                <a style="color: #FFFFFF" >Cancel</a>
                        </button>
@code {
    [Parameter]
    public string Id{ get; set; }
    Device device = new Device();
    protected override async Task OnInitializedAsync()
    {
        device = await DeviceService.GetDevicesById(int.Parse(Id));
    }
        
   protected async Task Delete()
    {
        await DeviceService.DeleteAsync(int.Parse(Id));
        NavigationManager.NavigateTo("DeviceList");
    }
    void Cancel()
            {
                NavigationManager.NavigateTo("DeviceList");
            }
        }
