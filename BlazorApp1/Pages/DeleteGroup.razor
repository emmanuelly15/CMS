@page "/DeleteGroup/{Id}"
@using CommonModels.Model
@using BlazorApp1.Data
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject GroupService GroupService

<style>
    body {
        background-color: #F9F6EE;
    }
</style>

<h2>Delete Group</h2>
@if(group != null)
{
<p>Are you sure you want to delete this Group: <b>@group.Groups</b></p>
<div class="row">
       <table class="table">
               <tr>
                       <td>Name</td>
                       <td>@group.Groups </td>
               </tr>
              
                      
           </table>
</div>
}
<button type="button" class="btn btn-danger" @onclick="@Delete" value="Delete">
                                <span class="oi oi-trash"></span>
                                <a style="color: #FFFFFF" >Delete</a>
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel">
                                <span class="oi oi-circle-x"></span>
                                <a style="color: #FFFFFF" >Cancel</a>
                        </button>
@code {
    [Parameter]
    public string Id{ get; set; }
    Group group = new Group();
    protected override async Task OnInitializedAsync()
    {
        group = await GroupService.GetGroupById(int.Parse(Id));
    }
        
   protected async Task Delete()
    {
        
        await GroupService.DeleteAsync(int.Parse(Id));
        NavigationManager.NavigateTo("GroupList");
    }
    void Cancel()
            {
                NavigationManager.NavigateTo("GroupList");
            }
        }
