@page "/DeleteML/{Id}"
@using CommonModels.Model
@using BlazorApp1.Data
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject MailingListService MailingListService

<style>
    body {
        background-color: #F9F6EE;
    }
</style>

<h2>Delete Mailing List</h2>
@if(ml != null)
{
<p>Are you sure you want to delete this user with Mailing List: <b>@ml.Email</b></p>
<div class="row">
       <table class="table">
               
               <tr>
                       <td>Email</td>
                       <td>@ml.Email</td>
                   </tr>
               <tr>
                       <td>Groups</td>
                       <td>@ml.Groups</td>
                   </tr>
                   
           </table>
</div>
}
<button type="button" class="btn btn-danger" @onclick="@Delete" value="Delete">
                                <span class="oi oi-trash"></span>
                                <a style="color: #FFFFFF" >Delete</a>
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel">
                                <span class="oi oi-circle-x"></span>
                                <a style="color: #FFFFFF" >Cancel</a>
                        </button>
@code {
    [Parameter]
    public string Id{ get; set; }
    MailingListC ml = new MailingListC();
    protected override async Task OnInitializedAsync()
    {
        ml = await MailingListService.GetMLById(int.Parse(Id));
    }
        
   protected async Task Delete()
    {
        
        await MailingListService.DeleteAsync(int.Parse(Id));
        NavigationManager.NavigateTo("MailingListList");
    }
    void Cancel()
            {
                NavigationManager.NavigateTo("MailingListList");
            }
        }
