@page "/DeleteUser/{Id}"
@using CommonModels.Model
@using BlazorApp1.Data
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject UserService UserService
<h2>Delete User</h2>
@if(user != null)
{
<p>Are you sure you want to delete this user with Name: <b>@user.Name</b></p>
<div class="row">
       <table class="table">
               <tr>
                       <td>Name</td>
                       <td>@user.Name </td>
                   </tr>
               <tr>
                       <td>Email</td>
                       <td>@user.Email</td>
                   </tr>
               <tr>
                       <td>Telephone</td>
                       <td>@user.Telephone</td>
                   </tr>
                   <tr>
                       <td>Employee_ID</td>
                       <td>@user.EmpId</td>
                   </tr>
                   
           </table>
</div>
}
<button type="button" class="btn btn-danger" @onclick="@Delete" value="Delete">
                                <span class="oi oi-trash"></span>
                                <a style="color: #FFFFFF" >Delete</a>
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel">
                                <span class="oi oi-circle-x"></span>
                                <a style="color: #FFFFFF" >Cancel</a>
                        </button>
@code {
    [Parameter]
    public string Id{ get; set; }
    User user = new User();
    protected override async Task OnInitializedAsync()
    {
        user = await UserService.GetUserById(int.Parse(Id));
    }
        
   protected async Task Delete()
    {
        
        await UserService.DeleteAsync(int.Parse(Id));
        NavigationManager.NavigateTo("UserList");
    }
    void Cancel()
            {
                NavigationManager.NavigateTo("UserList");
            }
        }
