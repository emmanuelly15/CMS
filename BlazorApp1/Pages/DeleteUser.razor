@page "/DeleteUser/{Id}"
@using CommonModels.Model
@using BlazorApp1.Data
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject UserService UserService

<style>
    body {
        background-color: #F9F6EE;
    }
</style>

<h2>Delete User</h2>
@if(user != null)
{
<p>Are you sure you want to delete this user with Name: <b>@user.Name</b></p>
<div class="row">
       <table class="table">
               <tr>
                       <td>Name</td>
                       <td>@user.Name </td>
                   </tr>
               <tr>
                       <td>Email</td>
                       <td>@user.Email</td>
                   </tr>
               <tr>
                       <td>Telephone</td>
                       <td>@user.Telephone</td>
                   </tr>
                   <tr>
                       <td>Employee_ID</td>
                       <td>@user.EmpId</td>
                   </tr>
                   <tr>
                       <td>Password</td>
                       <td>@user.Password</td>
                   </tr>
           </table>
</div>
}
<div class="row">
        <div class="col-md-4">
                <div class="form-group">
                        <input type="button" class="btn btn-primary" @onclick="@Delete" value="Delete" />
                        <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
                    </div>
            </div>
</div>
@code {
    [Parameter]
    public string Id{ get; set; }
    User user = new User();
    protected override async Task OnInitializedAsync()
    {
        user = await UserService.GetUserById(int.Parse(Id));
    }
        
   protected async Task Delete()
    {
        
        await UserService.DeleteAsync(int.Parse(Id));
        NavigationManager.NavigateTo("UserList");
    }
    void Cancel()
            {
                NavigationManager.NavigateTo("UserList");
            }
        }
