@page "/DocumentSubmission"
@using BlazorApp1.Data
@using CommonModels.Model
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject DocumentService DocumentService


<h1>Document Submission</h1>
<h2>View documents and approve or reject the document</h2>

<h3>Document Submissions List</h3>
<div>
    @if (document != null)
    {
        <table class="table-bordered">
            <thead>
                <tr>
                    <th width="30%">IMEI</th>
                    <th width="20%">User</th>
                    <th width="20%">Group</th>
                    <th width="20%">Authorisation</th>
                    <th width="30%">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var p in document)
                {
                    <tr>
                        <td>@p.SentDateTime</td>
                        <td>@p.FileFormat</td>
                        <td>@p.DeviceId</td>
                        <td>@p.Img</td>
                        <td>@p.Description</td>
                        <td>@p.Location</td>
                        <td>@p.Status</td>
                        <td>@p.DocType</td>
                        <td>@p.Amount</td>
                        <td>@p.Comment</td>
                        <td>
                            <a href="/editdevice/@p.Id">Edit</a> |
                            <a href="/deletedevice/@p.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


@code {


    protected override async Task OnInitializedAsync()
    {
        document = await DocumentService.GetDocumentsAsync();
    }

    [Parameter]
    public string Id { get; set; }
    Document document = new Document();
    protected override async Task OnInitializedAsync()
    {
        //user = await HttpClient.GetAsync<User>("api/user/" + Id);
    }
    protected async Task Save()
    {
        await DocumentService.SaveAsync(document);
    }
    void Cancel()
    {
        //NavigationManager.NavigateTo("UserList");
    }



}
