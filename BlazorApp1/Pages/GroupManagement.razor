@page "/GroupManagement"
@using BlazorApp1.Data
@using CommonModels.Model
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject GroupService GroupService

<EditForm Model="@group" OnValidSubmit="@HandleValidSubmit">

    <DataAnnotationsValidator />

    <ValidationSummary />
<h1>Group Management</h1>
<h2>Add Group</h2>

    
<div class="row">
        <div class="col-md-6">
                <div class="form-group">
                        <label for="Groups">  Group *</label>
                <RadzenTextBox @bind-Value=@group.Groups TextTransform="Uppercase" />
                    </div>
            </div>
        
        
</div>
<div class="row">
        <div class="col-md-4">
                <div class="form-group">
                        <button type="submit">Submit</button>
                        <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
                    </div>
            </div>
</div>
</EditForm>

@code {
    [Parameter]
    public string Id{ get; set; }
    string value;
    Group group = new Group();
    
    private async void HandleValidSubmit() //handles user exception to ensure valid information is entered before saving

    {
        await GroupService.SaveAsync(group);
        NavigationManager.NavigateTo("GroupList");
        Console.WriteLine("OnValidSubmit");

    }
    void OnChange(string value)
    {
        this.value = value.ToUpper();
    }

    void Cancel()
        {
                NavigationManager.NavigateTo("GroupList");
            }
}

