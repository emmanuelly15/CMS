@page "/Login"
@using CommonModels.Model;

@inject NavigationManager navManager;
<h3>Login</h3>
<style></style>
<div style="min-height:400px;"> 

    <div class="loginBox">

        <div class="Box">

            <br />
            <h1>Login</h1>
            
            @if (loginModel != null)
            {
                <EditForm Model="@loginModel" OnvalidSubmit="Login_click">
                    <DataAnnotationValidator/>
                    <InputText type="email" name="email" class="email" placeholder="email" @bind-Value="loginModel.email"

                    />
                </EditForm>
                 }
        </div>
    </div>
</div>

@code {
    LoginModel loginModel { get; set; }
}
